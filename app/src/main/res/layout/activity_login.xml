<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.blanink.activity.LoginActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_login_progress"
        android:visibility="invisible"
        android:layout_below="@+id/ll_login">
        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:text="登录中..."
            android:textSize="14sp"
            android:layout_below="@id/pb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/corner_common_border_gray"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/rl_user_"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            >

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#fff"
                    android:src="@mipmap/user" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/rl_user_">
            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:hint="请输入账户"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:singleLine="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_common_border_gray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/rl_psd_"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            >

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_psd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#fff"
                    android:src="@mipmap/psd" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/rl_psd_">

            <EditText
                android:id="@+id/et_psd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:hint="请输入密码"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:layout_marginRight="1dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:singleLine="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_red"
        android:text="登录"
        android:id="@+id/btn_login"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        />

    <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/colorWhite"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
        android:visibility="invisible"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>
</RelativeLayout>
