<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context="com.blanink.activity.report.ReportType">
    <RelativeLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="公司报表"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/last"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>
    <com.blanink.view.MyPagerList
        android:id="@+id/pager"
        android:layout_below="@id/table"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </com.blanink.view.MyPagerList>
    <LinearLayout
        android:layout_below="@id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/tv_sale"
            android:text="销售额"
            android:drawableTop="@drawable/sale"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="利润"
            android:drawableTop="@drawable/money"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="成本"
            android:drawableTop="@drawable/cb"
            android:gravity="center"
            android:layout_width="0dp"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="损耗"
            android:drawableTop="@drawable/bad"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
