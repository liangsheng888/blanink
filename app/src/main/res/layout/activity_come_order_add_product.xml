<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackGround"
        tools:context="com.blanink.activity.ComeOrderAddProductActivity">

        <RelativeLayout
            android:id="@+id/come_order_add_product_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorTheme">

            <TextView
                android:id="@+id/come_order_detail_tv_seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="添加产品"
                android:textColor="#fff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/come_order_add_product_iv_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/last" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/come_order_add_product_rl_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/come_order_add_product_rl"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="苏州空行互联公司"
                android:textColor="#000"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="订单号:" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/tv_order"
                    android:text="12355688955256699985" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/come_order_add_product_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/come_order_add_product_rl_company"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="选择客户:" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackGround"
                    android:layout_toRightOf="@id/tv_customer"
                    android:layout_marginLeft="5dp"
                    >

                    <Spinner
                        android:layout_margin="1dp"
                        android:id="@+id/come_order_add_product_sp_customer"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:entries="@array/customer"
                        android:background="#fff"></Spinner>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_zrr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="责任人:" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_zrr"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/edt_person_liable"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#fff"
                        android:layout_margin="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"></EditText>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="优先级:" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_priority"
                    android:background="@color/colorBackGround">
                    <Spinner
                        android:id="@+id/come_order_add_product_sp_priority"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_margin="1dp"
                        android:entries="@array/priority"
                        android:background="#fff"></Spinner>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="数 量:" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_number"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/edt_number"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="1dp"
                        android:background="#fff"></EditText>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_hand_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="交货日期:" />

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_hand_date"
                    android:background="@color/colorBackGround">

                    <TextView
                        android:id="@+id/tv_hand_date_time"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:singleLine="true"
                        android:drawableRight="@drawable/rili"
                        android:gravity="center_vertical"
                        android:text="2012-10-12"></TextView>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#fff"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_same_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="同订单交货期:" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_same_order"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_yes"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:text="是"
                        android:background="#fff"></RadioButton>

                    <RadioButton
                        android:id="@+id/rb_no"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:text="否"
                        android:layout_marginLeft="20dp"
                        android:background="#fff"></RadioButton>
                </RadioGroup>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_product_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="生产编号:" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_product_no"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/et_product_no"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="1dp"
                        android:background="#fff"></EditText>
                </RelativeLayout>
            </RelativeLayout>

            <com.blanink.view.NoScrollListview
                android:id="@+id/lv_guan_jian_zi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"></com.blanink.view.NoScrollListview>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:text="备注信息:" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_note"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/et_note"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:gravity="top"
                        android:hint="备注信息"
                        android:lines="5"
                        android:textSize="14sp"></EditText>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传附件:" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传图片:" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:background="@drawable/corners_bg_red"
                    android:text="保存订单"
                    android:textColor="#fff" />

                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@drawable/corners_bg_blue"
                    android:text="继续添加新产品"
                    android:textColor="#fff" />
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:text="本订单内其它产品"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/order_other"/>
            <com.blanink.view.NoScrollListview
                android:id="@+id/lv_other_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.blanink.view.NoScrollListview>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
