<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context="com.blanink.activity.order.ComeOrderAddProductActivity">

    <RelativeLayout
        android:id="@+id/come_order_add_product_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorTheme">

        <TextView
            android:id="@+id/come_order_detail_tv_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加产品"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/last"
            android:gravity="center"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/come_order_add_product_rl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/come_order_add_product_rl_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="订单号:" />

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/tv_order"
                        android:gravity="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="订单交货期:" />

                    <TextView
                        android:id="@+id/tv_order_hand_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_date" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/come_order_add_product_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/come_order_add_product_rl_company"
                android:layout_marginTop="4dp"
                android:background="#fff"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_product_no"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="生产编号:"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:layout_marginLeft="9dp"
                        android:layout_toRightOf="@id/tv_product_no"
                        android:background="@drawable/corner_common_border_gray">
                        <EditText
                            android:id="@+id/et_product_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="请编辑生产编号"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="16sp"></EditText>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_pro_category"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="产品类:"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="9dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_pro_category"
                        android:background="@drawable/corner_common_border_gray">

                        <Spinner
                            android:id="@+id/sp_product_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/corner_common_border_gray"
                            ></Spinner>
                    </RelativeLayout>
                </LinearLayout>

                <com.blanink.view.NoScrollListview
                    android:id="@+id/gv_attributes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:divider="@null"
                    android:footerDividersEnabled="false"></com.blanink.view.NoScrollListview>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_product"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="产品名:"

                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:layout_marginLeft="9dp"

                        android:layout_toRightOf="@id/tv_product"
                        android:background="@drawable/corner_common_border_gray">

                        <EditText
                            android:id="@+id/et_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="产品名称"
                            android:paddingLeft="5dp"
                            android:textColor="@color/colorGray"
                            android:textSize="16sp"></EditText>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_priority_a"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="甲方优先级:"
                        android:textColor="@color/colorBlack"

                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="9dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_priority_a"
                        android:background="@drawable/corner_common_border_gray">

                        <Spinner
                            android:id="@+id/sp_priority_a"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@drawable/corner_common_border_gray"
                            ></Spinner>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_priority"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="内部优先级:"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="9dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_priority"
                        android:background="@drawable/corner_common_border_gray">

                        <Spinner
                            android:id="@+id/sp_priority"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@drawable/corner_common_border_gray"                            ></Spinner>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" 数 量:"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:layout_marginLeft="9dp"
                        android:layout_toRightOf="@id/tv_number"
                        android:background="@drawable/corner_common_border_gray">

                        <EditText
                            android:id="@+id/edt_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:hint="产品数量 "
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="16sp"></EditText>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="产品单价:"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:layout_marginLeft="9dp"
                        android:background="@drawable/corner_common_border_gray">

                        <EditText
                            android:id="@+id/edt_price"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:hint="产品单价 "
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="16sp"></EditText>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rl_product_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_hand_date"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="产品交货期:"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:layout_marginLeft="9dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_hand_date"
                        android:background="@color/colorBackGround">

                        <TextView
                            android:id="@+id/tv_hand_date_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/corner_common_border_gray"
                            android:drawableRight="@drawable/rili"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"></TextView>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rl_product_date_in"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/tv_hand_date_in"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="内部交货期:"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:id="@+id/rl_in"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:layout_marginLeft="9dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_hand_date_in"
                        android:background="@color/colorBackGround">

                        <TextView
                            android:id="@+id/tv_hand_date_time_in"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/corner_common_border_gray"
                            android:drawableRight="@drawable/rili"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"></TextView>
                    </RelativeLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/colorBackGround"></View>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/corner_common_border_gray"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_note">

                        <EditText
                            android:id="@+id/et_note"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_margin="1dp"
                            android:background="#fff"
                            android:gravity="top"
                            android:hint="请填写备注信息"
                            android:lines="5"
                            android:padding="5dp"
                            android:textColor="@color/colorGray"
                            android:textSize="16sp"></EditText>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorWhite"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true" />

                        <ImageView
                            android:id="@+id/iv_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/upload"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                      />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="10dp">

                    <Button
                        android:id="@+id/bt_save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:background="@drawable/selector_red"
                        android:text="保存订单"
                        android:textColor="#fff" />

                </LinearLayout>
                
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

