<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_tender_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.blanink.activity.bidTender.TenderPublish">
        <RelativeLayout
            android:id="@+id/bid_apply_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorTheme">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="编辑"
                android:id="@+id/come_order_tv_seek"
                android:textColor="#fff"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/modify_iv_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:gravity="center"
                android:text="返回"
                android:drawableLeft="@drawable/last" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/go_order_add_ll"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bid_apply_rl"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/rl_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_theme"
                    android:background="@color/colorBackGround"
                    android:layout_marginLeft="5dp">

                    <EditText
                        android:id="@+id/tender_et_title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="1dp"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:background="#fff">

                    </EditText>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="53dp"
                    android:gravity="center_vertical"
                    android:text="标题:"
                    android:textColor="@color/colorBlack"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="52dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/colorBlack"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="采购产品:" />

                <RelativeLayout
                    android:id="@+id/rl_product"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_product"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/et_product"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="1dp"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:background="#fff"
                        android:singleLine="true">

                    </EditText>

                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_first_price"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:text="预付定金(%):" />

                <RelativeLayout
                    android:id="@+id/rl_first_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_first_price"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/et_first_price"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="1dp"
                        android:inputType="number"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:singleLine="true">

                    </EditText>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignBaseline="@+id/rl_price"
                    android:layout_alignBottom="@+id/rl_price"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/colorBlack"
                    android:text="目标价格(元):" />

                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_price2"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/et_price"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="1dp"
                        android:paddingLeft="5dp"
                        android:inputType="number"
                        android:background="#fff"
                        android:textSize="14sp"
                        android:singleLine="true">

                    </EditText>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="数量(个):"
                    android:textColor="@color/colorBlack"
                    android:layout_alignParentLeft="true"
                    />
                <RelativeLayout
                    android:id="@+id/rl_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_num"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/et_num"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="1dp"
                        android:textSize="14sp"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:background="#fff">

                    </EditText>

                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/rl_hand_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_hand_date"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/et_end_date"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="#fff"
                        android:textSize="14sp"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:singleLine="true">

                    </EditText>
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_toRightOf="@id/et_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="#fff"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:drawableRight="@drawable/rili"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_hand_date"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:text="截止日期:"
                    android:textColor="@color/colorBlack"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_order_add_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/go_order_add_ll"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <com.blanink.view.NoScrollListview
                android:id="@+id/lv_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.blanink.view.NoScrollListview>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#fff"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="25dp"
                    android:text="备注信息:"
                    android:textColor="@color/colorBlack"
                    />

                <RelativeLayout
                    android:id="@+id/rl_note"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_note"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorBackGround">

                    <EditText
                        android:id="@+id/et_note"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="5dp"
                        android:gravity="top"
                        android:textSize="14sp">

                    </EditText>

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/go_order_add_ll2"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="15dp"
                android:background="@drawable/selector_red"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
