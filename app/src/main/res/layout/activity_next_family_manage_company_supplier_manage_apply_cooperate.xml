<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/last_family_manage_customer_apply_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/colorTheme">

        <TextView
            android:id="@+id/customer_apply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="申请合作"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/customer_apply_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/customer_apply_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/last_family_manage_customer_apply_rl"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#8e8686">

        </View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="申请合作"
            android:textColor="#000"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#8e8686">

        </View>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/company_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_apply_ll"
        android:background="#fff"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorTheme"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="xxxxx有限责任公司"/>
            <View
                android:id="@+id/view"
                android:layout_toRightOf="@id/tv_company"
                android:layout_width="1dp"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:background="@color/colorBackGround"></View>
            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/view"
                android:text="服务客户:"/>
            <TextView
                android:id="@+id/tv_customer_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_customer"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorTheme"
                android:text="30家"/>
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/credit"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="诚信客户"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏 苏州"/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_company_honest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_marginRight="20dp"
                android:text="4.5"/>
            <TextView
                android:id="@+id/tv_company_xin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_company_honest"
                android:text="公司信誉:"
                android:textColor="#000"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="负责人:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_master"
                android:layout_toRightOf="@id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李四"/>
            <TextView
                android:id="@+id/tv_company_zi_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_company_remark"
                android:text="自评:"
                android:textColor="#000"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_company_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_marginRight="20dp"
                android:text="4.5"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="电话:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_phone"
                android:layout_toRightOf="@id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1301333546889"/>
            <TextView
                android:id="@+id/tv_company_remark_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_company_other_remark"
                android:text="他评:"
                android:textColor="#000"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_company_other_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_marginRight="20dp"
                android:text="4.5"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="主营:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_scope"
                android:layout_toRightOf="@id/major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机、电脑、笔记本"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="详细地址:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_detail_address"
                android:layout_toRightOf="@id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏省苏州市XX路XX"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="主页:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_url"
                android:layout_toRightOf="@id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.thinkhoodop.com"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="公司简介:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_introduce"
                android:layout_toRightOf="@id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="6"
                android:ellipsize="end"></TextView>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/customer_delete_relation_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_info"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:text="填写申请信息" />
            <Button
                android:id="@+id/btn_apply"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corners_bg_yellow"
                android:text="发出申请"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:layout_weight="0.5"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/colorBackGround">
            <EditText
                android:id="@+id/et_apply_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:lines="6"
                android:hint="填写申请信息"
                android:textSize="14sp"
                android:gravity="top"
                android:background="#fff"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_delete_relation_rl"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="上传附件:"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_upload_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_upload"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="上传照片:"/>
    </LinearLayout>
</LinearLayout>

    </ScrollView>