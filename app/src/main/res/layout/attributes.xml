<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical">
  <LinearLayout
      android:id="@+id/rl_sp"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
     >
      <TextView
          android:id="@+id/tv_attribute_name"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:gravity="center"
          android:textSize="16sp"
          android:textColor="@color/colorBlack"
          android:text="属性名:"/>
      <RelativeLayout
          android:layout_toRightOf="@id/tv_attribute_name"
          android:background="@drawable/corner_common_border_gray"
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          >
      <Spinner
          android:id="@+id/sp_attribute_value"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:background="@drawable/corner_common_border_gray"
          />
      </RelativeLayout>
  </LinearLayout>
   <LinearLayout
       android:id="@+id/rl_edt"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       >
       <TextView
           android:id="@+id/attribute_name"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:gravity="center"
           android:textSize="16sp"
           android:textColor="@color/colorBlack"
           android:text="属性名:"/>
       <EditText
           android:id="@+id/et_attribute"
           android:singleLine="true"
           android:paddingLeft="5dp"
           android:layout_toRightOf="@id/attribute_name"
           android:layout_width="0dp"
           android:layout_weight="2"
           android:layout_centerVertical="true"
           android:textSize="16sp"
           android:textColor="@color/colorGray"
           android:background="@drawable/corner_common_border_gray"
           android:layout_height="40dp" />
   </LinearLayout>
</LinearLayout>