<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround">
    <LinearLayout
        android:id="@+id/order_detail_ll_proCateGory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:paddingTop="5dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品类:"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/proCateGory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/category"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_ruler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品规格:"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/order_detail_ll_proCateGory_ruler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_ruler"
                android:text="" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_detail_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_detail_ll_proCateGory"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="单价:"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/come_order_detail_single_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_price"
                android:text="" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="数量:"

                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/come_order_detail_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_num"
                android:text="" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_detail_rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_detail_rl2"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_endDateHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="交货日期:"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/come_order_detail_tv_endDateHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_endDateHand"
                android:text="" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_mine_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="甲方优先级:"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/come_order_detail_tv_mine_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_mine_priority"
                android:text="" />
        </RelativeLayout>

    </LinearLayout>


    <com.blanink.view.NoScrollGridview
        android:id="@+id/order_detail_gv_keyField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_detail_rl3"
        android:background="#fff"
        android:numColumns="2"></com.blanink.view.NoScrollGridview>

    <LinearLayout
        android:id="@+id/order_detail_ll_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_detail_gv_keyField"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:textColor="@color/colorBlack"
            android:id="@+id/textView5" />

        <TextView
            android:id="@+id/order_detail_tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="" />

    </LinearLayout>

   <RelativeLayout
       android:id="@+id/rl_down"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/order_detail_ll_note"
       android:layout_marginTop="1dp"
       android:background="#fff"
       >
   </RelativeLayout>
    <com.blanink.view.NoScrollGridview
        android:id="@+id/come_order_detail_lv_fujian_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_down"
        android:background="#fff"></com.blanink.view.NoScrollGridview>

    <LinearLayout
        android:id="@+id/item_come_order_detail_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#fff"
        android:layout_below="@id/come_order_detail_lv_fujian_download">

        <TextView
            android:id="@+id/tv_add_note"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="加备注"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/corner_common_border_gray"
            />
        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorRed"
            android:background="@drawable/corner_common_border_red" />
        <TextView
            android:id="@+id/tv_down_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下发产品"
            android:background="@drawable/corner_common_border_blue"
            android:textColor="@color/colorBlue" />

    </LinearLayout>
</RelativeLayout>
