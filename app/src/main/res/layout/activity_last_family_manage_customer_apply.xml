<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_last_family_manage_customer_apply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blanink.activity.LastFamilyManageCustomerApply">
    <RelativeLayout
        android:id="@+id/last_family_manage_customer_apply_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/colorTheme">
        <TextView
            android:id="@+id/customer_apply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="商户管理"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/customer_apply_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/customer_apply_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/last_family_manage_customer_apply_rl"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#8e8686">

        </View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="申请合作"
            android:textColor="#000"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#8e8686">

        </View>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/company_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_apply_ll"
        android:background="#fff"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorTheme"
                android:text="XXXX公司"/>
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTheme"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="实有"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏 苏州"/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_company_xin_yu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_marginRight="20dp"
                android:text="4.5"/>
            <TextView
                android:id="@+id/tv_company_xin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_company_xin_yu"
                android:text="公司信誉:"
                android:textColor="#000"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="负责人:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_major_person"
                android:layout_toRightOf="@id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李四"/>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_company_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_marginRight="20dp"
                android:text="4.5"/>
            <TextView
                android:id="@+id/tv_company_zi_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_company_remark"
                android:text="自评:"
                android:textColor="#000"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="电话:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_phone"
                android:layout_toRightOf="@id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1301333546889"/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_company_other_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_marginRight="20dp"
                android:text="4.5"/>
            <TextView
                android:id="@+id/tv_company_remark_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_company_other_remark"
                android:text="他评:"
                android:textColor="#000"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="简介:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_introduce"
                android:layout_toRightOf="@id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司是现代化高科技的创业型公司"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="地址:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_company_address"
                android:layout_toRightOf="@id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏省苏州市XX路XX"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="主页:"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_url"
                android:layout_toRightOf="@id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.thinkhoodop.com"/>


        </RelativeLayout>

    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_marginTop="5dp"
        android:layout_below="@id/company_info"
        android:background="@color/colorTheme"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:id="@+id/customer_delete_relation_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:text="填写申请信息" />
            <Button
                android:id="@+id/btn_apply"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corners_bg_yellow"
                android:text="发出申请"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:layout_weight="0.5"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/colorBackGround">

            <EditText
                android:id="@+id/et_apply_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="6"
                android:hint="填写申请信息"
                android:textSize="14sp"
                android:gravity="top"
                android:background="#fff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_delete_relation_rl"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="上传附件:"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_upload_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_upload"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="上传照片:"/>
    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@id/ll_upload_photo"
        android:background="@color/colorTheme"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</RelativeLayout>
