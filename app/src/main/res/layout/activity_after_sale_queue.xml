<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_after_sale_queue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context="com.blanink.activity.AfterSaleQueue">
    <RelativeLayout
        android:id="@+id/rl_after_sale_queue"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="售后列表"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/after_sale_queue_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
    </RelativeLayout>
    <!--<com.jude.rollviewpager.RollPagerView
        android:id="@+id/after_sale_queue_sp_advertise"
        android:layout_below="@id/rl_after_sale_queue"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="140dp">

    </com.jude.rollviewpager.RollPagerView>

    <RelativeLayout
        android:id="@+id/rl_unsorted"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/after_sale_queue_sp_advertise">
        <Spinner
            android:id="@+id/rl_unsorted_product"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:entries="@array/product"
            android:layout_height="match_parent">
        </Spinner>
        <TextView
            android:id="@+id/tv_sorted"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="#fff"
            android:text="排序"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/sj"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_more"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="更多"/>

    </RelativeLayout>

    <com.blanink.view.NoScrollListview
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:id="@+id/lv_after_sale"
        android:layout_below="@id/rl_unsorted"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.blanink.view.NoScrollListview>-->
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_after_sale_queue">
       <RadioGroup
           android:id="@+id/rg_after_sale"
           android:layout_width="match_parent"
           android:layout_height="35dp"
           android:orientation="horizontal">
           <RadioButton
               android:id="@+id/rb_not_handle"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:button="@null"
               android:background="@drawable/selector_rg"
               android:checked="true"
               android:gravity="center"
               android:textColor="@color/text_color_selector"
               android:text="待处理"/>
           <RadioButton
               android:id="@+id/rb_handle_finished"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:button="@null"
               android:background="@drawable/selector_rg"
               android:textColor="@color/text_color_selector"
               android:gravity="center"
               android:text="已处理"
               />
       </RadioGroup>>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_after_sale"
        android:layout_below="@id/rl"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>
