<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context="com.blanink.activity.ComeOrderActivity">
    <RelativeLayout
            android:id="@+id/come_order_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单列表"
            android:id="@+id/come_order_tv_seek"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/come_order_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/come_order_rl_seek"
        android:layout_below="@id/come_order_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/come_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/seek"/>
          <EditText
              android:layout_toRightOf="@id/come_order_tv"
              android:background="@null"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:hint="请输入你需要的信息"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorTheme"
            android:layout_alignParentRight="true"
            android:text="搜索"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/come_order_btn_newAddOrder"
        android:layout_below="@id/come_order_rl_seek"
        android:layout_margin="10dp"
        android:background="@drawable/corners_bg_red"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="新增订单"
        android:textColor="#fff"
        android:textSize="18sp"/>
    <LinearLayout
        android:id="@+id/rl_unsorted"
        android:layout_below="@id/come_order_btn_newAddOrder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/come_order__unsorted_product"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:entries="@array/category"
            android:layout_height="wrap_content">


        </Spinner>
        <TextView
            android:id="@+id/come_order_rl_sorted"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="#fff"
            android:text="排序"
            android:textColor="#000"
            android:textSize="16sp"
            android:drawableRight="@drawable/sj"
            android:layout_height="wrap_content">
        </TextView>
        <View
            android:layout_width="1dp"
            android:background="@color/colorBackGround"
            android:layout_height="match_parent"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/come_order_handed_product"
            android:layout_marginLeft="10dp"
            android:text="查看已发布的"/>

    </LinearLayout>

   <!-- <ListView
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:id="@+id/come_order_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_unsorted"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ListView>-->
    <ImageView
        android:layout_below="@+id/rl_unsorted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/item_order"/>
</RelativeLayout>
