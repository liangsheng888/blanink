<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context="com.blanink.activity.NoteNotifyActivity">

    <RelativeLayout
        android:id="@+id/note_notify_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="备注提醒"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/note_notify_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/note_notify_rl2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/note_notify_rl"
        android:background="#fff"
        android:padding="5dp">

        <TextView
            android:id="@+id/note_notify_rl_product_follw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:text="加热"
            android:textColor="#000"
            android:textSize="18sp" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/note_notify_rl_product_follw"
            android:background="@color/colorBackGround"></View>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/view"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/note_notify_tv_orderState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进行中"
                    android:textColor="#f00" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/colorBackGround"></View>

                <TextView
                    android:id="@+id/tv_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="已完成:"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/note_notify_tv_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="25%"
                    android:textColor="#f00" />

            </LinearLayout>

            <TextView
                android:id="@+id/note_notify_tv_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="空行互联科技公司" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/note_notify_rl2"
        android:background="@color/colorTheme"></View>

    <RelativeLayout
        android:id="@+id/note_notify"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/view3"
        android:layout_marginTop="5dp"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_noteNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:text="备注提醒"
            android:textColor="#000"
            android:textSize="16sp" />
        />

        <RelativeLayout
            android:id="@+id/note_notify_rl_noteContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_noteNotify"
            android:layout_margin="10dp"
            android:background="@color/colorBackGround"
            >

            <EditText
                android:id="@+id/note_notify_edt_noteContent"
                android:background="#fff"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:hint="请填写备注"
                android:gravity="top"
                android:lines="6"
                />
        </RelativeLayout>

    </RelativeLayout>

    <View

        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/note_notify"
        android:background="@color/colorTheme">

    </View>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/note_notify_tv_hand"
        android:layout_below="@id/view4"
        android:background="#fff"
        android:text="上传照片"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:id="@+id/note_notify_rl_hand"
        android:layout_below="@id/note_notify_tv_hand"
        android:layout_width="match_parent"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/note_notify_iv_hand"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tupian"/>

    </RelativeLayout>
    <Button
        android:layout_below="@id/note_notify_rl_hand"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:text="提交"
        android:textSize="18sp"
        android:background="@drawable/corners_bg_red"
        android:id="@+id/note_notify_commit"/>


</RelativeLayout>
