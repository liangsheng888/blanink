<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context="com.blanink.activity.order.GoOrderGroupDownOrder">

    <RelativeLayout
        android:id="@+id/go_order_group"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">

        <TextView
            android:id="@+id/go_order_group_tv_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="下单详情"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/go_order_group_iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/last" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/go_order_group_product_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/go_order_group"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="供应商:"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/go_order_group_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_customer"
                android:background="#fff"
                android:gravity="center_vertical"
                android:text="****公司"
                android:textColor="#f00"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_priority"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="订单号:"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_priority"
                android:background="#fff"
                android:gravity="center_vertical"
                android:text="12345687995425"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="top"
                android:text="备注:"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_note"
                android:background="@color/colorBackGround">

                <EditText
                    android:id="@+id/et_note"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:gravity="top"
                    android:hint="备注信息"
                    android:lines="5"
                    android:textSize="14sp"></EditText>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_hand_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="交货日期:"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_hand_date"
                android:background="@color/colorBackGround">

                <TextView
                    android:id="@+id/tv_hand_date_time"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:drawableRight="@drawable/rili"
                    android:gravity="center_vertical"
                    android:text="2012-10-12"></TextView>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="订单名称:"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_number"
                android:background="@color/colorBackGround">

                <TextView
                    android:id="@+id/edt_number"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="1dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:text="运动鞋"></TextView>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_product_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="联系人:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_product_no"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"

                android:layout_toRightOf="@id/tv_product_no"
                android:background="#fff"
                android:gravity="center_vertical"
                android:text="张三"></TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话:"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_toRightOf="@id/tv_phone"
                android:text="13384074444" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/go_order_group_product_ll"
        android:layout_margin="10dp"
        android:background="@drawable/corners_bg_red"
        android:text="确认下单"
        android:textColor="#fff" />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btn_ok"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#8e8686">

        </View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="采单需求已安排/未下单"
            android:textColor="#000"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#8e8686">

        </View>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_unsorted"
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/rl_unsorted_product"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_height="wrap_content">


        </Spinner>
        <Spinner
            android:id="@+id/rl_sorted"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="#fff"
            android:layout_height="wrap_content">
        </Spinner>
        <View
            android:layout_width="1dp"
            android:background="@color/colorBackGround"
            android:layout_height="match_parent"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_handed_product"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#f00"
            android:text="更多"/>

    </LinearLayout>
    <com.blanink.view.NoScrollListview
        android:id="@+id/lv"
        android:layout_below="@id/rl_unsorted"
        android:layout_width="match_parent"
        android:background="#fff"
        android:padding="10dp"
        android:layout_height="wrap_content">
    </com.blanink.view.NoScrollListview>



</RelativeLayout>
