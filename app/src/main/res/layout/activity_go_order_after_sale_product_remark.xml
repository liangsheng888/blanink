<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_go_order_after_sale_product_remark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackGround"
        tools:context="com.blanink.activity.remark.RemarkGoOrderAfterSaleProduct">

        <RelativeLayout
            android:id="@+id/goOrderAfterSaleProductRemark_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorTheme">

            <TextView
                android:id="@+id/goOrderAfterSaleProductRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="去单售后产品评论"
                android:textColor="#fff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/goOrderAfterSaleProductRemark_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/last" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_detail_history"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/goOrderAfterSaleProductRemark_rl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/colorTheme">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="订单产品详情"
                        android:textColor="@color/colorTheme" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/colorTheme">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="历史评论"
                        android:textColor="@color/colorTheme" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/after_sale_handle_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_detail_history"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_after_sale_detail"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="售后处理详情"
                android:textSize="16sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_after_sale_detail"
                android:background="@color/colorBackGround"></View>

            <TextView
                android:id="@+id/tv_handle_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginLeft="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="处理记录:"
                android:textColor="#000" />

            <com.blanink.view.NoScrollListview
                android:id="@+id/lv_after_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_handle_note"></com.blanink.view.NoScrollListview>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_send_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/after_sale_handle_detail"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:text="发起原因:" />

                <TextView
                    android:id="@+id/tv_reason_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_reason"
                    android:ellipsize="end"
                    android:text="产品与需求不符合"
                    android:textColor="#f00" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="详情:"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:text="你在干啥呢呢干啥干什么"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@id/tv_detail"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/guanggao" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/demand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"

                    android:text="提出要求:" />

                <TextView
                    android:id="@+id/tv_demand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/demand"
                    android:text="修理" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/remark_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_send_reason"
            android:layout_marginTop="5dp"
            android:background="#fff">

            <TextView
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="评论对方"
                android:textColor="#000"
                android:textSize="16sp" />

            <LinearLayout

                android:id="@+id/remark_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/other"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackGround">

                </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="服务态度:"
                        android:textColor="#000" />

                    <com.blanink.view.MyRatingBar
                        android:id="@+id/rb_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:starCount="5"
                        app:starEmpty="@mipmap/star_gray"
                        app:starFill="@mipmap/star_yellow"
                        app:starHalf="@mipmap/star_half_yellow"
                        app:starImageSize="20dp"
                        app:starPadding="20dp"
                        app:starStep="1.5"
                        app:stepSize="Half" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="质量:"
                        android:textColor="#000" />

                    <com.blanink.view.MyRatingBar
                        android:id="@+id/rb_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:starCount="5"
                        app:starEmpty="@mipmap/star_gray"
                        app:starFill="@mipmap/star_yellow"
                        app:starHalf="@mipmap/star_half_yellow"
                        app:starImageSize="20dp"
                        app:starPadding="20dp"
                        app:starStep="1.5"
                        app:stepSize="Half" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_effective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="时效:"
                        android:textColor="#000" />

                    <com.blanink.view.MyRatingBar
                        android:id="@+id/rb_honest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentRight="true"
                        app:starCount="5"
                        app:starEmpty="@mipmap/star_gray"
                        app:starFill="@mipmap/star_yellow"
                        app:starHalf="@mipmap/star_half_yellow"
                        app:starImageSize="20dp"
                        app:starPadding="20dp"
                        app:starStep="1.5"
                        app:stepSize="Half" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/colorBackGround">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_margin="1dp"
                            android:background="#fff"
                            android:gravity="top"
                            android:hint="请输入你的评价心得"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners_bg_red"
                    android:text="提交评论"
                    android:textColor="#fff" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/remark_self"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/remark_other"
            android:layout_marginTop="5dp"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_remark_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="自我检讨"
                android:textColor="#000"
                android:textSize="16sp" />

            <LinearLayout

                android:id="@+id/ll_remark_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_remark_self"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackGround"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_service_attitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="服务态度:"
                        android:textColor="#000" />

                    <com.blanink.view.MyRatingBar
                        android:id="@+id/rb_service_attitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:starCount="5"
                        app:starEmpty="@mipmap/star_gray"
                        app:starFill="@mipmap/star_yellow"
                        app:starHalf="@mipmap/star_half_yellow"
                        app:starImageSize="20dp"
                        app:starPadding="20dp"
                        app:starStep="1.5"
                        app:stepSize="Half" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_timely_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="付款及时性:"
                        android:textColor="#000" />

                    <com.blanink.view.MyRatingBar
                        android:id="@+id/rb_timely_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:starCount="5"
                        app:starEmpty="@mipmap/star_gray"
                        app:starFill="@mipmap/star_yellow"
                        app:starHalf="@mipmap/star_half_yellow"
                        app:starImageSize="20dp"
                        app:starPadding="20dp"
                        app:starStep="1.5"
                        app:stepSize="Half" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_effective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="诚信:"
                        android:textColor="#000" />

                    <com.blanink.view.MyRatingBar
                        android:id="@+id/rb_effective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:starCount="5"
                        app:starEmpty="@mipmap/star_gray"
                        app:starFill="@mipmap/star_yellow"
                        app:starHalf="@mipmap/star_half_yellow"
                        app:starImageSize="20dp"
                        app:starPadding="20dp"
                        app:starStep="1.5"
                        app:stepSize="Half" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="出价慷慨:"
                        android:textColor="#000" />

                    <com.blanink.view.MyRatingBar
                        android:id="@+id/rb_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:starCount="5"
                        app:starEmpty="@mipmap/star_gray"
                        app:starFill="@mipmap/star_yellow"
                        app:starHalf="@mipmap/star_half_yellow"
                        app:starImageSize="20dp"
                        app:starPadding="20dp"
                        app:starStep="1.5"
                        app:stepSize="Half" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/colorBackGround">

                        <EditText
                            android:id="@+id/editText2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#fff"
                            android:gravity="top"
                            android:layout_margin="1dp"
                            android:hint="自我检讨"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners_bg_red"
                    android:text="提交评论"
                    android:textColor="#fff" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
