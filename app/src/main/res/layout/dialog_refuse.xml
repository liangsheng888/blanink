<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_last_family_manage_customer_delete_relation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context="com.blanink.activity.lastNext.RefuseReason">
    <RelativeLayout
        android:id="@+id/last_family_manage_customer_delete_relation_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/colorBlue">
        <TextView
            android:id="@+id/customer_delete_relation_tv_seek"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="拒绝申请"
            android:textColor="#fff"
            android:textSize="18sp" />
        />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/customer_delete_relation_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_below="@+id/last_family_manage_customer_delete_relation_rl"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
           >

            <EditText
                android:id="@+id/et_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="6"
                android:textSize="16sp"
                android:gravity="top"
                android:padding="5dp"
                android:background="@drawable/corner_common_border_gray"
                android:hint="请填写拒绝原因"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corner_common_border_gray"
            android:text="取消"
            android:layout_margin="15dp"
            />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corner_common_border_blue"
                android:text="发送"
                android:textColor="@color/colorBlue"
                android:layout_margin="15dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
